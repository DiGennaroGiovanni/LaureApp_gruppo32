<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="CustomTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#023FA6</item>
        <item name="colorPrimaryDark">#00213A</item>
        <item name="colorAccent">#346D93</item>
        <item name="android:textAppearanceButton">@style/CustomButtonTextAppearance</item>
        <item name="android:windowFullscreen">true</item>
        <item name="backgroundColor">#0808275A</item>
        <item name="buttonStyle">@style/MyButton</item>
    </style>

    <style name="CustomButtonTextAppearance" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">20sp</item>
        <item name="android:backgroundTint">#0E3C5F</item>
    </style>

    <style name="TitleText">
        <item name="fontFamily">@font/cardo</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="SimpleText">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SimpleBoldText">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="StarButtonStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">#FFC107</item>
        <item name="colorPrimaryDark">#FFC107</item>
        <item name="colorAccent">#FFC107</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:padding">8dp</item>
    </style>

    <style name="MyButton" >
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/buttonshape</item>
        <item name="android:textSize">20sp</item>
        <item name="android:shadowColor">#A8A8A8</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingEnd">15dp</item>
        <item name="android:shadowRadius">5</item>
        <item name="android:textAlignment">center</item>
        <item name="textAllCaps">true</item>
        <item name="elevation">2dp</item>
    </style>

    <style name="MyButtonNoText" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/custom_blue</item>
        <item name="android:shadowColor">#A8A8A8</item>
    </style>

    <style name="AddButton" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:text">@color/white</item>
        <item name="colorPrimary">@color/green_add</item>
    </style>

    <style name="DeleteButton" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/red</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AcceptButton" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:text">@color/white</item>
        <item name="colorPrimary">@color/accept</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="DeclineButton" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:text">@color/white</item>
        <item name="colorPrimary">@color/decline</item>
        <item name="android:textSize">20sp</item>
    </style>

</resources>
