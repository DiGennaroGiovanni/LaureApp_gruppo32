<?xml version="1.0" encoding="utf-8"?>
<resources>
        <!-- Base application theme. -->
        <style name="CustomTheme" parent="Theme.AppCompat.Light.DarkActionBar">
            <!-- Customize your theme here. -->
            <item name="colorPrimary">#023FA6</item>
            <item name="colorPrimaryDark">#00213A</item>
            <item name="colorAccent">#346D93</item>
            <item name="android:textAppearanceButton">@style/CustomButtonTextAppearance</item>
        </style>

        <style name="CustomButtonTextAppearance" parent="TextAppearance.AppCompat.Button">
            <item name="android:textSize">20dp</item>
            <item name="android:fontFamily">sans-serif</item>
            <item name="android:backgroundTint">#323F49</item>
        </style>
</resources>
