<resources>
    <!-- Base application theme. -->
    <style name="Theme.LaureApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.LaureApp.NoActionBar" >
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/custom_blue</item>
        <item name="colorPrimaryDark">#00213A</item>
        <item name="colorAccent">#346D93</item>
        <item name="android:textAppearanceButton">@style/CustomButtonTextAppearance</item>
        <item name="android:windowFullscreen">true</item>


    </style>

    <style name="Theme.LaureApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.LaureApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>