<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_margin="8dp"
    android:background="@drawable/pattern3"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="50"
        android:gravity="center">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/allThesisBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="20dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/roboto_medium"
            android:padding="20dp"
            android:text="@string/all_thesis_button"
            android:textSize="34sp"
            app:icon="@drawable/icon_available_theses"
            app:iconGravity="textStart" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="50"
        android:gravity="center">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/myThesisBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/roboto_medium"
            android:padding="20dp"
            android:text="@string/your_thesis_button"
            android:textSize="34sp"
            app:icon="@drawable/ic_your_thesis"
            app:iconGravity="textStart" />

    </LinearLayout>
</LinearLayout>

