<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/pattern3"
    tools:context=".commonActivities.ProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:contentDescription="@string/menu_profile"
                android:maxWidth="150dp"
                android:maxHeight="150dp"
                android:scaleType="fitCenter"
                android:src="@drawable/profile_image_black" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtNameTitle"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="40"
                android:fontFamily="@font/roboto"
                android:gravity="end"
                android:paddingStart="1dp"
                android:paddingEnd="10sp"
                android:text="@string/name_profile"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txtNameSurname"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="60"
                android:text=""
                android:textColor="@color/black"
                android:textSize="20sp"
                android:fontFamily="@font/roboto_light"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           >

            <TextView
                android:id="@+id/txtFacultyTitle"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="40"
                android:fontFamily="@font/roboto"
                android:gravity="end"
                android:paddingStart="1dp"
                android:paddingEnd="10sp"
                android:text="@string/faculty_profile"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txtFaculty"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="60"
                android:text=""
                android:textColor="@color/black"
                android:textSize="20sp"
                android:fontFamily="@font/roboto_light"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtEmailTitle"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="40"
                android:fontFamily="@font/roboto"
                android:gravity="end"
                android:paddingStart="1dp"
                android:paddingEnd="10sp"
                android:text="@string/email_profile"
                android:textColor="@color/black"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/txtEmail"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="60"
                android:text=""
                android:textColor="@color/black"
                android:textSize="20sp"
                android:fontFamily="@font/roboto_light"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtBadgeTitle"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="40"
                android:fontFamily="@font/roboto"
                android:gravity="end"
                android:paddingStart="1dp"
                android:paddingEnd="10sp"
                android:text="@string/matriculation_number"
                android:textColor="@color/black"
                android:textSize="20sp"
                />

            <TextView
                android:id="@+id/txtBadgeNumber"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="60"
                android:text=""
                android:textColor="@color/black"
                android:textSize="20sp"
                android:fontFamily="@font/roboto_light"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">


            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDeleteProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="@string/delete_profile"
                app:icon="@drawable/ic_account_deleted"
                app:iconSize="20sp"
                app:iconGravity="textStart"
                android:textSize="16sp"
                android:fontFamily="@font/roboto_medium"
                android:backgroundTintMode="src_over"/>

        </RelativeLayout>

    </LinearLayout>

</ScrollView>