<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0808275A"
    tools:context=".commonActivities.ProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:contentDescription="@string/menu_profile"
                android:maxWidth="150dp"
                android:maxHeight="150dp"
                android:scaleType="fitCenter"
                android:src="@drawable/profile_image_black" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtNameTitle"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="45"
                android:fontFamily="@font/cardo"
                android:gravity="end"
                android:paddingStart="1dp"
                android:paddingEnd="10sp"
                android:text="@string/name_surname"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtNameSurname"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="55"
                android:text="@string/name_surname"
                android:textColor="@color/black"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/txtFacultyTitle"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="45"
                android:fontFamily="@font/cardo"
                android:gravity="end"
                android:paddingStart="1dp"
                android:paddingEnd="10sp"
                android:text="@string/faculty_"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtFaculty"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="55"
                android:text="@string/faculty_"
                android:textColor="@color/black"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/txtEmailTitle"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="45"
                android:fontFamily="@font/cardo"
                android:gravity="end"
                android:paddingStart="1dp"
                android:paddingEnd="10sp"
                android:text="@string/email"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtEmail"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="55"
                android:text="@string/email"
                android:textColor="@color/black"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/txtBadgeTitle"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="45"
                android:fontFamily="@font/cardo"
                android:gravity="end"
                android:paddingStart="1dp"
                android:paddingEnd="10sp"
                android:text="@string/matriculation_number"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtBadgeNumber"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="55"
                android:text="@string/matriculation_number"
                android:textColor="@color/black"
                android:textSize="20sp" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">

            <Button
                android:id="@+id/btnDeleteProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="@string/delete_profile"
                android:textSize="20sp"
                android:textStyle="bold"
                android:theme="@style/DeleteButton" />

        </RelativeLayout>

    </LinearLayout>

</ScrollView>