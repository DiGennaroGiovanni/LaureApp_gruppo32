<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="#0808275A"
    android:orientation="vertical">

    <Button
        android:id="@+id/allThesisBtn"
        android:layout_width="300sp"
        android:layout_height="100sp"
        android:layout_marginTop="120sp"
        android:layout_marginBottom="90sp"
        android:layout_weight="1"
        android:text="@string/all_thesis_button"
        android:textSize="34sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/myThesisBtn"
        android:layout_width="300sp"
        android:layout_height="100sp"
        android:layout_marginBottom="120sp"
        android:layout_weight="1"
        android:text="@string/your_thesis_button"
        android:textSize="34sp"
        android:textStyle="bold" />

</LinearLayout>

