<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="7dp"
    android:orientation="vertical"
    android:background="@drawable/bordered_white_layout">


    <TextView
        android:id="@+id/txtThesisName"
        android:text="@string/thesis_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#00213A"
        android:textSize="28sp"
        android:textStyle="bold"
        android:fontFamily="@font/roboto_medium" />

    <!--        lineetta divisiva      -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="10sp"
        android:background="#4D000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtStudentTitle"
            android:text="@string/student"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_weight="40"
            android:fontFamily="@font/roboto"
            android:gravity="end"
            android:paddingHorizontal="10sp"
            android:textColor="@color/black"
            android:textSize="20sp"  />

        <TextView
            android:id="@+id/txtStudent"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="60"
            android:fontFamily="@font/roboto_light"
            android:gravity="center|start"
            android:text=""
            android:textColor="@color/black"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtNameTask"
            android:text="@string/task_name_"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="40"
            android:fontFamily="@font/roboto"
            android:gravity="end"
            android:paddingHorizontal="10sp"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:labelFor="@id/edtNameTask"/>

        <EditText
            android:id="@+id/edtNameTask"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="60"
            android:fontFamily="@font/roboto_light"
            android:text=""
            android:autofillHints=""
            android:inputType="textMultiLine"
            android:textColor="@color/black"
            android:textSize="20sp"
             />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtDescriptionTitle"
            android:text="@string/description"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="40"
            android:fontFamily="@font/roboto"
            android:gravity="end"
            android:paddingHorizontal="10sp"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:labelFor="@id/edtDescription"/>

        <EditText
            android:id="@+id/edtDescription"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="60"
            android:fontFamily="@font/roboto_light"
            android:text=""
            android:autofillHints=""
            android:inputType="textMultiLine"
            android:textColor="@color/black"
            android:textSize="20sp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtEstimatedTimeTitle"
            android:layout_width="0sp"
            android:text="@string/estimated_time"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_weight="40"
            android:fontFamily="@font/roboto"
            android:gravity="end"
            android:paddingHorizontal="10sp"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:labelFor="@id/edtEstimatedTime"/>

        <LinearLayout
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="60"
            android:orientation="horizontal"
            android:layout_gravity="bottom">

            <EditText
                android:id="@+id/edtEstimatedTime"
                android:layout_width="40sp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:autofillHints=""
                android:textAlignment="center"
                android:textSize="20sp"
                />

            <TextView
                android:text="@string/days"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto"
                android:textSize="15sp"/>

        </LinearLayout>

    </LinearLayout>



    <com.google.android.material.button.MaterialButton
        android:id="@+id/create_task_button"
        android:text="@string/add_task"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10sp"
        android:layout_marginHorizontal="10sp"
        android:textSize="16sp"
        app:icon="@drawable/icon_plus"
        app:iconGravity="textStart"
        app:iconSize="20dp"
        />

</LinearLayout>



