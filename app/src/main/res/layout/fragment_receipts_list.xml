<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/studInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#1A023FA6"
        android:elevation="4sp"
        android:padding="5sp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Studente: "
                android:fontFamily="@font/cardo"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"/>


            <TextView
                android:id="@+id/txtStudentNameSurname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="nomeStudente"
                android:fontFamily="@font/cardo"
                android:textColor="@color/black"
                android:textSize="20sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tesi: "
                android:fontFamily="@font/cardo"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"/>


            <TextView
                android:id="@+id/txtThesisName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="nomeTesi"
                android:fontFamily="@font/cardo"
                android:textColor="@color/black"
                android:textSize="20sp"/>

        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btnNewReceipt"
        android:layout_below="@+id/studInfo"
        android:layout_marginBottom="6dp">


        <LinearLayout
            android:id="@+id/layoutReceiptsList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:context=".ReceiptsListFragment">

        </LinearLayout>


    </ScrollView>

    <Button
        android:id="@+id/btnNewReceipt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="New Receipt"
        android:fontFamily="@font/cardo"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
