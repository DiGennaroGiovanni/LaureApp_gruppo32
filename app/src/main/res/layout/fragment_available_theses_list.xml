<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#1A023FA6"
        android:elevation="4dp"
        android:baselineAligned="false">

        <SearchView
            android:id="@+id/search_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="90"
            android:background="@color/white"
            android:iconifiedByDefault="false"
            android:queryHint="Search Thesis...">

        </SearchView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_gravity="center"
            android:gravity="end"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnFilter"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_filter"
                android:contentDescription="@string/filter_thesis" />

            <Button
                android:id="@+id/btnCamera"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:background="@drawable/ic_camera_button"
                android:contentDescription="@string/camera_description" />

        </LinearLayout>



    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#0808275A"
        android:contentDescription="@string/list_available_thesis">

        <LinearLayout
            android:id="@+id/layout_tesi_disponibili"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        </LinearLayout>

    </ScrollView>

</LinearLayout>