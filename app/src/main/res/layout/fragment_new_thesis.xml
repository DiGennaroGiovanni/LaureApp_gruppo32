<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#0808275A"
    tools:context=".professor.NewThesisFragment">

    <LinearLayout
        android:id="@+id/first_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp">


        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/thesis_name"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edtThesisName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:autofillHints=""
            android:ems="10"
            android:hint="@string/type_name_of_thesis"
            android:inputType="textMultiLine"
            android:textColorHint="#546E7A"
            android:textSize="20sp" />

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioButtonSperimentale"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/experimental"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/radioButtonCompilativa"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/drafted"
                android:textSize="16sp" />

        </RadioGroup>

        <TextView
            android:id="@+id/txtFaculty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/faculty"
            android:textAlignment="center"
            android:textSize="16sp" />

        <Spinner
            android:id="@+id/edtFaculty"
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:backgroundTint="#BFBABA"
            android:gravity="center|center_vertical"
            android:textAlignment="center"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            tools:ignore="SpeakableTextPresentCheck" />

        <LinearLayout
            android:id="@+id/second_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_weight="1"
                android:text="@string/estimated_time"
                android:textAlignment="viewEnd"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/edtEstimatedTime"
                android:layout_width="10dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:autofillHints=""
                android:hint="@string/estimated_time_hint"
                android:inputType="number"
                android:textAlignment="center"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_weight="2"
                android:width="10dp"
                android:text="@string/days"
                android:textSize="16sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/thesis_description"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edtDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:autofillHints=""
            android:ems="10"
            android:gravity="start|top"
            android:hint="@string/type_description_thesis"
            android:inputType="textMultiLine"
            android:minHeight="48dp"
            android:textColorHint="#546E7A"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/correlator"
            android:textAlignment="center"
            android:textSize="16sp" />

        <Spinner
            android:id="@+id/edtCorrelator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:backgroundTint="#BFBABA"
            android:gravity="center"
            android:textAlignment="center"
            tools:ignore="SpeakableTextPresentCheck" />


        <TextView
            android:id="@+id/textView13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/teaching_materials"
            android:textAlignment="textStart"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/third_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layout_lista"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bordered_rect"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/addFile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/button_add_material"
                app:icon="@drawable/ic_upload"
                android:layout_margin="5sp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/thesis_constraints"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/averageCheck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:minHeight="48dp"
                android:text="@string/average_marks"
                android:textSize="16sp"
                tools:ignore="RtlHardcoded" />

            <EditText
                android:id="@+id/edtAverage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/hint_average_marks"
                android:textColorHint="#546E7A"
                android:inputType="number"
                android:textSize="20sp"
                android:autofillHints="">

            </EditText>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/requiredExamsCheck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:minHeight="48dp"
                android:text="@string/required_exams"
                android:textSize="16sp"
                tools:ignore="RtlHardcoded" />

            <EditText
                android:id="@+id/edtRequiredExams"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_required_exams"
                android:textColorHint="#546E7A"
                android:inputType="textMultiLine"
                android:textSize="20sp"
                android:autofillHints="" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/related_projects" />

        <EditText
            android:id="@+id/edtRelatedProjects"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:autofillHints=""
            android:ems="10"
            android:gravity="start|top"
            android:hint="@string/type_related_projects"
            android:inputType="textMultiLine"
            android:minHeight="48dp"
            android:textColorHint="#546E7A"
            android:textSize="20sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonCreateThesis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/create_thesis"
            android:textSize="16sp"
            app:icon="@drawable/icon_plus"
            app:iconGravity="textStart"/>

    </LinearLayout>

</ScrollView>
