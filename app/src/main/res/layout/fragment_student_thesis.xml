<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtNameTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:fontFamily="@font/cardo"
            android:text="Thesis name"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtTypologyTitle"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="35"
                android:fontFamily="@font/cardo"
                android:gravity="end"
                android:paddingEnd="20sp"
                android:text="Thesis type:"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/txtTypology"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="65"
                android:text=""
                android:textColor="@color/black"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtDepartmentTitle"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="35"
                android:fontFamily="@font/cardo"
                android:gravity="end"
                android:paddingEnd="20sp"
                android:text="Department:"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/txtDepartment"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="65"
                android:text=""
                android:textColor="@color/black"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtProfessorTitle"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="35"
                android:fontFamily="@font/cardo"
                android:gravity="end"
                android:paddingEnd="20sp"
                android:text="Professor:"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/txtProfessor"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="65"
                android:text=""
                android:textColor="@color/black"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtCorrelatorTitle"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="35"
                android:fontFamily="@font/cardo"
                android:gravity="end"
                android:paddingEnd="20sp"
                android:text="Correlator:"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/txtCorrelator"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="65"
                android:text=""
                android:textColor="@color/black"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtTimeTitle"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="35"
                android:fontFamily="@font/cardo"
                android:gravity="end"
                android:paddingEnd="20sp"
                android:text="Estimated Time:"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/txtTime"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="65"
                android:text=""
                android:textColor="@color/black"
                android:textSize="15sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtDescriptionTitle"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="35"
                android:fontFamily="@font/cardo"
                android:gravity="end"
                android:paddingEnd="20sp"
                android:text="Description:"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/txtDescription"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="65"
                android:text=""
                android:textColor="@color/black"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtRelatedProjectsTitle"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="35"
                android:fontFamily="@font/cardo"
                android:gravity="end"
                android:paddingEnd="20sp"
                android:text="Related Projects:"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/txtRelatedProjects"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="65"
                android:text=""
                android:textColor="@color/black"
                android:textSize="15sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtTitleAverageMarks"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="35"
                android:fontFamily="@font/cardo"
                android:gravity="end"
                android:paddingEnd="20sp"
                android:text="Average Marks:"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/txtAverageMarks"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="65"
                android:text=""
                android:textColor="@color/black"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtTitleRequiredExams"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="35"
                android:fontFamily="@font/cardo"
                android:gravity="end"
                android:paddingEnd="20sp"
                android:text="Required Exams:"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/txtRequiredExams"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="65"
                android:text=""
                android:textColor="@color/black"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <Button
                android:id="@+id/btnContactProf"
                android:textSize="15sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="Message"
                android:backgroundTint="@android:color/transparent"
                android:layout_margin="5dp"
                android:textColor="@color/black"
                android:fontFamily="@font/cardo"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnThesisRequest"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:fontFamily="@font/cardo"
                android:layout_margin="5dp"
                android:text="Request thesis"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold"
                />

        </LinearLayout>

    </LinearLayout>

</ScrollView>