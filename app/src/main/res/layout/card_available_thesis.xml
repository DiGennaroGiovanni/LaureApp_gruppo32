<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/info_tesi_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:id="@+id/cardMaterial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="3sp"
            android:layout_marginTop="3sp"
            android:layout_marginEnd="3sp"
            android:layout_marginBottom="3sp"
            android:background="@drawable/custom_shape"
            android:orientation="vertical"
            android:padding="4sp">

            <TextView
                android:id="@+id/txtName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/cardo"
                android:text="Thesis name"
                android:textAllCaps="true"
                android:textColor="#00213A"
                android:textSize="22sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtTypologyTitle"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="35"
                    android:fontFamily="@font/cardo"
                    android:gravity="end"
                    android:paddingEnd="10sp"
                    android:text="Thesis typology:"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtTypology"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="65"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="15sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtDepartmentTitle"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="35"
                    android:fontFamily="@font/cardo"
                    android:gravity="end"
                    android:paddingEnd="10sp"
                    android:text="Department:"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtDepartment"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="65"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="15sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtProfessor"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="35"
                    android:fontFamily="@font/cardo"
                    android:gravity="end"
                    android:paddingEnd="10sp"
                    android:text="Professor:"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtStudentThesis"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="65"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="15sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtCorrelatorTitle"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="35"
                    android:fontFamily="@font/cardo"
                    android:gravity="end"
                    android:paddingEnd="10sp"
                    android:text="Correlator:"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtCorrelator"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="65"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="15sp" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/shareBtn"
                    android:layout_width="33sp"
                    android:layout_height="33sp"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/share_button" />

                <Button
                    android:id="@+id/btnStar"
                    android:layout_width="33sp"
                    android:layout_height="33sp"
                    android:layout_alignTop="@+id/shareBtn"
                    android:layout_toStartOf="@+id/shareBtn"
                    android:background="@drawable/ic_star" />

            </RelativeLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</RelativeLayout>

