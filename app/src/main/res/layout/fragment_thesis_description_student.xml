<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/pattern3">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_margin="7dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bordered_white_layout">

            <TextView
                android:id="@+id/txtNameTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/thesis_name"
                android:textAlignment="center"
                android:layout_marginVertical="5sp"
                android:textAllCaps="true"
                android:textColor="#00213A"
                android:textSize="28sp"
                android:textStyle="bold"
                android:fontFamily="@font/roboto_medium" />

            <!--        lineetta divisiva      -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#40000000" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#4DD3D3D3">

                <TextView
                    android:id="@+id/txtTypologyTitle"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_weight="40"
                    android:fontFamily="@font/roboto"
                    android:gravity="end"
                    android:paddingHorizontal="10sp"
                    android:text="@string/thesis_type"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/txtTypology"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="60"
                    android:fontFamily="@font/roboto_light"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="20sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtDepartmentTitle"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_weight="40"
                    android:gravity="end"
                    android:paddingHorizontal="10sp"
                    android:text="@string/department"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:fontFamily="@font/roboto" />

                <TextView
                    android:id="@+id/txtDepartment"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="60"
                    android:fontFamily="@font/roboto_light"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="20sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#4DD3D3D3">

                <TextView
                    android:id="@+id/txtProfessorTitle"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_weight="40"
                    android:gravity="end"
                    android:paddingHorizontal="10sp"
                    android:text="@string/professor_message"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="normal"
                    android:fontFamily="@font/roboto" />

                <TextView
                    android:id="@+id/txtProfessor"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="60"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="normal"
                    android:fontFamily="@font/roboto_light" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtCorrelatorTitle"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_weight="40"
                    android:fontFamily="@font/roboto"
                    android:gravity="end"
                    android:paddingHorizontal="10sp"
                    android:text="@string/correlator"
                    android:textColor="@color/black"
                    android:textSize="20sp" />


                <TextView
                    android:id="@+id/txtCorrelator"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="60"
                    android:fontFamily="@font/roboto_light"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="20sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#4DD3D3D3">

                <TextView
                    android:id="@+id/txtTimeTitle"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_weight="40"
                    android:gravity="end"
                    android:text="@string/estimated_time"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:paddingHorizontal="10sp"
                    android:fontFamily="@font/roboto" />

                <TextView
                    android:id="@+id/txtTime"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="60"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:fontFamily="@font/roboto_light" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtDescriptionTitle"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_weight="40"
                    android:gravity="end"
                    android:paddingHorizontal="10sp"
                    android:text="@string/description"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:fontFamily="@font/roboto" />

                <TextView
                    android:id="@+id/txtDescription"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="60"
                    android:text=""
                    android:fontFamily="@font/roboto_light"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#4DD3D3D3">

                <TextView
                    android:id="@+id/txtRelatedProjectsTitle"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_weight="40"
                    android:gravity="end"
                    android:text="@string/related_projects"
                    android:paddingHorizontal="10sp"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:fontFamily="@font/roboto" />

                <TextView
                    android:id="@+id/txtRelatedProjects"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="60"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:fontFamily="@font/roboto_light" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtTitleAverageMarks"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_weight="40"
                    android:gravity="end"
                    android:paddingHorizontal="10sp"
                    android:text="@string/average_marks"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:fontFamily="@font/roboto" />

                <TextView
                    android:id="@+id/txtAverageMarks"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="60"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:layout_gravity="bottom"
                    android:fontFamily="@font/roboto_light"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#4DD3D3D3"
                android:layout_marginBottom="10sp">

                <TextView
                    android:id="@+id/txtTitleRequiredExams"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_weight="40"
                    android:gravity="end"
                    android:paddingHorizontal="10sp"
                    android:text="@string/required_exams"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:fontFamily="@font/roboto" />

                <TextView
                    android:id="@+id/txtRequiredExams"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="60"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:layout_gravity="bottom"
                    android:fontFamily="@font/roboto_light" />

            </LinearLayout>


        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:baselineAligned="false">

        <RelativeLayout
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnMessage"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginHorizontal="10sp"
                android:fontFamily="@font/roboto_medium"
                android:text="@string/message"
                android:textSize="16sp"
                app:icon="@drawable/ic_send_message"
                app:iconGravity="textStart"
                app:strokeColor="@color/custom_blue" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnThesisRequest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10sp"
                android:backgroundTintMode="src_over"
                android:fontFamily="@font/roboto_medium"
                android:text="@string/request_thesis"
                android:textSize="16sp"
                app:icon="@drawable/ic_require_thesis"
                app:iconGravity="textStart" />

        </RelativeLayout>

    </LinearLayout>
</LinearLayout>