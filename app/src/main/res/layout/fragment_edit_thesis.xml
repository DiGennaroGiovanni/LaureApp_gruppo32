<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pattern3"
    android:padding="5dp"
    tools:context=".professor.ThesesListFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bordered_white_layout"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtNameTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5sp"
            android:background="@null"
            android:fontFamily="@font/roboto_medium"
            android:text="@string/thesis_name"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="#00213A"
            android:textSize="28sp"
            android:textStyle="bold" />

        <!--        lineetta divisiva      -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#4D000000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#4DD3D3D3"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtTypologyTitle"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="40"
                android:fontFamily="@font/roboto"
                android:gravity="end"
                android:paddingHorizontal="10sp"
                android:text="@string/thesis_type"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txtTypology"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="60"
                android:fontFamily="@font/roboto_light"
                android:text=""
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtDepartmentTitle"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="40"
                android:fontFamily="@font/roboto"
                android:gravity="end"
                android:paddingHorizontal="10sp"
                android:text="@string/department"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txtDepartment"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_weight="60"
                android:fontFamily="@font/roboto_light"
                android:text=""
                android:textColor="@color/black"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#4DD3D3D3"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtCorrelatorTitle"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="40"
                android:fontFamily="@font/roboto"
                android:gravity="end"
                android:paddingHorizontal="10sp"
                android:text="@string/correlator"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <RelativeLayout
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="60">

                <Spinner
                    android:id="@+id/spinnerCorrelator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    tools:ignore="SpeakableTextPresentCheck" />

            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtStudentTitle"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="40"
                android:fontFamily="@font/roboto"
                android:gravity="end"
                android:paddingHorizontal="10sp"
                android:text="@string/student_edit_thesis"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txtStudent"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_weight="60"
                android:fontFamily="@font/roboto_light"
                android:text=""
                android:textColor="@color/black"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#4DD3D3D3"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtTimeTitle"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="40"
                android:fontFamily="@font/roboto"
                android:gravity="end"
                android:labelFor="@id/edtTime"
                android:paddingHorizontal="10sp"
                android:text="@string/estimated_time"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_weight="60"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/edtTime"
                    android:layout_width="40sp"
                    android:layout_height="wrap_content"
                    android:autofillHints=""
                    android:fontFamily="@font/roboto_light"
                    android:inputType="number"
                    android:textAlignment="center"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/roboto_light"
                    android:text="@string/days"
                    android:textSize="15sp" />

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtDescriptionTitle"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="40"
                android:fontFamily="@font/roboto"
                android:gravity="end"
                android:labelFor="@id/edtDescription"
                android:padding="10sp"
                android:text="@string/description"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/edtDescription"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_weight="60"
                android:autofillHints=""
                android:inputType="textMultiLine"
                android:text=""
                android:textColor="@color/black"
                android:textSize="20sp"
                tools:ignore="DuplicateSpeakableTextCheck" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#4DD3D3D3"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtRelatedProjectsTitle"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="40"
                android:fontFamily="@font/roboto"
                android:gravity="end"
                android:labelFor="@id/edtRelatedProjects"
                android:padding="10sp"
                android:text="@string/related_projects"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/edtRelatedProjects"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_weight="60"
                android:autofillHints=""
                android:fontFamily="@font/roboto_light"
                android:inputType="textMultiLine"
                android:text=""
                android:textColor="@color/black"
                android:textSize="20sp" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/avgConstraint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/averageMarksTitle"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="40"
                android:fontFamily="@font/roboto"
                android:gravity="end"
                android:labelFor="@id/averageCheck"
                android:padding="10sp"
                android:text="@string/average_marks"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="60">

                <CheckBox
                    android:id="@+id/averageCheck"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/edtAverage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autofillHints=""
                    android:fontFamily="@font/roboto_light"
                    android:inputType="number"
                    android:textColorHint="#78909C"
                    android:textSize="20sp">

                </EditText>
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/examsConstraint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#4DD3D3D3"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/requiredExamsTitle"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="40"
                android:fontFamily="@font/roboto"
                android:gravity="end"
                android:labelFor="@id/requiredExamsCheck"
                android:padding="10sp"
                android:text="@string/required_exams"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="60">

                <CheckBox
                    android:id="@+id/requiredExamsCheck"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/edtRequiredExams"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:autofillHints=""
                    android:fontFamily="@font/roboto_light"
                    android:inputType="textMultiLine"
                    android:textSize="20sp">

                </EditText>
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtMaterialsTitle"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="40"
                android:fontFamily="@font/roboto"
                android:gravity="end"
                android:padding="10sp"
                android:text="@string/materials"
                android:textColor="@color/black"
                android:textSize="20sp" />


            <LinearLayout
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="65"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/layout_lista_file"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bordered_rect"
                    android:orientation="vertical" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonAdd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_margin="3dp"
                    android:backgroundTint="#B31C4F7E"
                    android:fontFamily="@font/roboto_medium"
                    android:text="@string/button_add_material"
                    android:textSize="16sp"
                    app:icon="@drawable/ic_upload"
                    app:iconGravity="textStart"
                    app:iconSize="20sp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#4DD3D3D3"
            android:orientation="vertical">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="10sp"
                android:fontFamily="@font/roboto_medium"
                android:text="@string/save_thesis"
                android:textSize="16sp"
                app:icon="@drawable/ic_save"
                app:iconGravity="textStart"
                app:iconSize="20sp" />

        </LinearLayout>


    </LinearLayout>

</ScrollView>