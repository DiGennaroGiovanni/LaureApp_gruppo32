<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pattern3"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="1"
        tools:context=".professor.ThesesListFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:background="@drawable/bordered_white_layout"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtNameTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:text="@string/thesis_name"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="#00213A"
                android:textSize="56sp"
                android:textStyle="bold" />

            <!--        lineetta divisiva      -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#40000000" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#4DD3D3D3">

                <TextView
                    android:id="@+id/txtTypologyTitle"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_weight="40"
                    android:fontFamily="@font/roboto"
                    android:gravity="end"
                    android:paddingHorizontal="10sp"
                    android:text="@string/thesis_type"
                    android:textColor="@color/black"
                    android:textSize="40sp" />

                <TextView
                    android:id="@+id/txtTypology"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="60"
                    android:fontFamily="@font/roboto_light"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="40sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtDepartmentTitle"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_weight="40"
                    android:fontFamily="@font/roboto"
                    android:gravity="end"
                    android:paddingHorizontal="10sp"
                    android:text="@string/department"
                    android:textColor="@color/black"
                    android:textSize="40sp" />

                <TextView
                    android:id="@+id/txtDepartment"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="60"
                    android:fontFamily="@font/roboto_light"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="40sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#4DD3D3D3"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtProfessorTitle"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_weight="40"
                    android:fontFamily="@font/roboto"
                    android:gravity="end"
                    android:paddingHorizontal="10sp"
                    android:text="@string/professor_message"
                    android:textColor="@color/black"
                    android:textSize="40sp" />

                <TextView
                    android:id="@+id/txtProfessor"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="60"
                    android:fontFamily="@font/roboto_light"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="40sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtCorrelatorTitle"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_weight="40"
                    android:fontFamily="@font/roboto"
                    android:gravity="end"
                    android:paddingHorizontal="10sp"
                    android:text="@string/correlator"
                    android:textColor="@color/black"
                    android:textSize="40sp" />

                <TextView
                    android:id="@+id/txtCorrelator"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="60"
                    android:fontFamily="@font/roboto_light"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="40sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#4DD3D3D3"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtTimeTitle"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_weight="40"
                    android:fontFamily="@font/roboto"
                    android:gravity="end"
                    android:paddingHorizontal="10sp"
                    android:text="@string/estimated_time"
                    android:textColor="@color/black"
                    android:textSize="40sp" />

                <TextView
                    android:id="@+id/txtTime"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="60"
                    android:fontFamily="@font/roboto_light"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="40sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtDescriptionTitle"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_weight="40"
                    android:fontFamily="@font/roboto"
                    android:gravity="end"
                    android:paddingHorizontal="10sp"
                    android:text="@string/description"
                    android:textColor="@color/black"
                    android:textSize="40sp" />

                <TextView
                    android:id="@+id/txtDescription"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="60"
                    android:fontFamily="@font/roboto_light"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="40sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#4DD3D3D3"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtRelatedProjectsTitle"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_weight="40"
                    android:fontFamily="@font/roboto"
                    android:gravity="end"
                    android:paddingHorizontal="10sp"
                    android:text="@string/related_projects"
                    android:textColor="@color/black"
                    android:textSize="40sp" />

                <TextView
                    android:id="@+id/txtRelatedProjects"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="60"
                    android:fontFamily="@font/roboto_light"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="40sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtTitleAverageMarks"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_weight="40"
                    android:fontFamily="@font/roboto"
                    android:gravity="end"
                    android:paddingHorizontal="10sp"
                    android:text="@string/average_marks"
                    android:textColor="@color/black"
                    android:textSize="40sp" />

                <TextView
                    android:id="@+id/txtAverageMarks"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="60"
                    android:fontFamily="@font/roboto_light"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="40sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#4DD3D3D3"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtTitleRequiredExams"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_weight="40"
                    android:fontFamily="@font/roboto"
                    android:gravity="end"
                    android:paddingHorizontal="10sp"
                    android:text="@string/required_exams"
                    android:textColor="@color/black"
                    android:textSize="40sp" />

                <TextView
                    android:id="@+id/txtRequiredExams"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="60"
                    android:fontFamily="@font/roboto_light"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="40sp" />

            </LinearLayout>



        </LinearLayout>

    </ScrollView>
</LinearLayout>