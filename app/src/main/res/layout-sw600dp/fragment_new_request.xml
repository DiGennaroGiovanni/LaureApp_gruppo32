<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/pattern3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/bordered_white_layout"
        android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#4DD3D3D3">

        <TextView
            android:id="@+id/txtAverageConstraint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5sp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/roboto_medium"
            android:text="@string/do_you_satisfy_the_average_constraint"
            android:textColor="@color/black"
            android:textSize="40sp"
            android:visibility="visible" />


    </LinearLayout>


        <LinearLayout
            android:id="@+id/averageMarksLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#4DD3D3D3"
            android:visibility="visible">

            <TextView
                android:id="@+id/txtTitleAverageMarks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:layout_margin="5sp"
                android:text="@string/average_marks_"
                android:textColor="@color/black"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/txtAverageMarks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_light"
                android:text=""
                android:textColor="@color/black"
                android:textSize="40sp" />

        </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#4DD3D3D3"
        android:gravity="center">


        <RadioGroup
            android:id="@+id/averageRadioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:orientation="horizontal"
            android:visibility="visible">

            <RadioButton
                android:id="@+id/rdbAverageYes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_light"
                android:text="@string/yes"
                android:textColor="@color/black"
                android:textSize="32sp">

            </RadioButton>

            <RadioButton
                android:id="@+id/rdbAverageNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_light"
                android:text="@string/no"
                android:textColor="@color/black"
                android:textSize="32sp">

            </RadioButton>

        </RadioGroup>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtExamsConstraint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/roboto_medium"
            android:layout_margin="5sp"
            android:text="@string/do_you_satisfy_the_exams_constraint"
            android:textColor="@color/black"
            android:textSize="40sp"
            android:visibility="visible" />


    </LinearLayout>



        <LinearLayout
            android:id="@+id/requiredExamsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible">

            <TextView
                android:id="@+id/txtTitleRequiredExams"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:layout_margin="5sp"
                android:text="@string/required_exams"
                android:textColor="@color/black"
                android:textSize="36sp" />

            <TextView
                android:id="@+id/txtRequiredExams"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:fontFamily="@font/roboto_light"
                android:textColor="@color/black"
                android:textSize="36sp" />

        </LinearLayout>

        <RadioGroup
            android:id="@+id/examsRadioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:orientation="horizontal"
            android:visibility="visible">

            <RadioButton
                android:id="@+id/rdbExamsYes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_light"
                android:text="@string/yes"
                android:textColor="@color/black"
                android:textSize="32sp">

            </RadioButton>

            <RadioButton
                android:id="@+id/rdbExamsNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_light"
                android:text="@string/no"
                android:textColor="@color/black"
                android:textSize="32sp">

            </RadioButton>

        </RadioGroup>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#4DD3D3D3">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/roboto"
            android:layout_margin="5sp"
            android:text="@string/notes_"
            android:textSize="36sp"
            android:textColor="@color/black"
            android:labelFor="@id/edtNote"/>

        <EditText
            android:id="@+id/edtNote"
            android:textSize="40sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:fontFamily="@font/roboto_light"/>


    </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnThesisRequest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:layout_marginHorizontal="10sp"
            android:fontFamily="@font/roboto_medium"
            android:text="@string/send_request"
            android:textSize="32sp"
            app:iconSize="40sp"
            app:icon="@drawable/ic_send_message"
            app:iconGravity="textStart"/>

    </LinearLayout>

</ScrollView>

