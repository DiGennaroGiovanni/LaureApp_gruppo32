<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_margin="8dp"
    android:orientation="vertical"
    android:background="@drawable/pattern3">

    <LinearLayout
        android:layout_width="600dp"
        android:layout_height="match_parent"
        android:layout_weight="50"
        android:layout_gravity="center"
        android:gravity="center">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/newThesisBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_gravity="center"
            android:padding="40dp"
            android:text="@string/add_thesis_button"
            app:iconGravity="textStart"
            android:textSize="64sp"
            app:iconSize="80dp"
            android:fontFamily="@font/roboto_medium"
            app:icon="@drawable/add_thesis_icon"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="600dp"
        android:layout_height="match_parent"
        android:layout_weight="50"
        android:layout_gravity="center"
        android:gravity="center">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/receiptsBtn"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/roboto_medium"
            android:layout_marginEnd="20dp"
            android:layout_gravity="center"
            android:padding="40dp"
            android:text="@string/requests_button"
            android:textSize="64sp"
            app:iconSize="80dp"
            app:iconGravity="textStart"
            app:icon="@drawable/icon_check"/>

    </LinearLayout>

</LinearLayout>

